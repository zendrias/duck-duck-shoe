<%- include('../partials/html-head') %>
  <% if (user) { %>
    <%- include('../partials/dashboardNav') %>
      <% } else { %>
        <%- include('../partials/nav') %>
          <% } %>

            <body class="policy-page">
              <form action="/legal/settings/<%= user.profile._id %>" method="POST">
                <div class="policy-flex">
                  <div>
                    <h3>Write Your Privacy Policy Below</h3>
                    <textarea name="privacyPolicy" id="privacy" cols="50" rows="10"
                      placeholder="Here!"><%= profile.siteSettings[0].privacyPolicy %></textarea>
                  </div>
                  <div>
                    <h3>Write Your Terms Of Service Below</h3>
                    <textarea name="termsOfService" id="termsOfService" cols="50" rows="10"
                      placeholder="Here!"><%= profile.siteSettings[0].termsOfService %></textarea>
                  </div>
                  <div>
                    <h3>Shipping Policy</h3>
                    <textarea name="shipping" id="shipping" cols="50" rows="10"
                      placeholder="Here!"><%= profile.siteSettings[0].shipping %></textarea>
                  </div>
                </div>
                <div class="button">
                  <button type="submit">Submit</button>

                </div>


              </form>

              <%- include('../partials/footer') %>