<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/all.css" />
  <% if (user) { %>
    <%- include('../partials/dashboardNav') %>
      <% } else { %>
        <%- include('../partials/nav') %>
          <% } %>

            <body>
              <h1>Duck Duck Designer Shoes</h1>
              <div class="container">
                <% shoes.forEach(shoe=>{%>
                  <a class="shoe-link" href="/shop/<%= shoe._id %> ">
                    <div class="product-cards">
                      <img src="<%= shoe.image %>" alt="Listing Image" class="all-listing-image">
                      <p>
                        <%= shoe.name %>
                      </p>
                  </a>
                  <p>
                    $<%= shoe.price %> USD
                  </p>
              </div>
              <% }) %>
                </div>

            </body>

            </html>