<%- include('../partials/html-head') %>
  <%- include('../partials/dashboardNav') %>


    <body>
      <h1 class="title">Add A Shoe!</h1>
      <form action="/shoes/create" method="POST" class="new-form">
        <label for="name">Shoe Name</label>
        <input type="text" name="name" required placeholder="Product Name" class="new-input">
        <br>
        <label for="price">Set A Price</label>
        <input type="Number" name="price" required placeholder="$" class="new-input">
        <br>
        <label for="size">Available Sizes</label>
        <input name="size" type="text" required placeholder="Separate Each Size With A Comma" class="new-input">
        <br>
        <label for="image">Product Image Link</label>
        <input type="text" name="image" required placeholder="URL Only" class="new-input">
        <br>
        <h3>Brief Description</h3>
        <textarea id="description" name="description" rows="9" cols="80"
          placeholder="A Great Description Boosts Reservations By 47%!"></textarea>
        <br>
        <div class="button mt10">
          <button>Create Listing!</button>
        </div>
      </form>
    </body>

    </html>